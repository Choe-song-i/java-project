import java.util.Scanner;

/*if else if 다중 조건문 형식)
 * if(조건식1){
 * 조건식1이 참일때 실행;
 * }else if(조건식2){
 * 조건식 2가 참일때 실행;
 * }slse{
 * 조건식 1,2 모두 거짓일때 실행;
 * }
 */
public class Ex2_04 {

	public static void main(String[] args) {
		Scanner scan=new Scanner(System.in);
		System.out.print("정수 숫자 입력>>");
		int a =Integer.parseInt(scan.nextLine());
		if(a>0) {
			System.out.print(a+"는 양수 입니다.");
		}else if(a<0){ 
			System.out.print(a+"는 음수 입니다.");
		}
	}else { 
		System.out.print(a+"0 입니다.");
	
	}

	}

}
